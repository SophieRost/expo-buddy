<div class= 'exhibitor-list-item'>

  <%= link_to expo_exhibitor_path(exhibitor.expo, exhibitor) do %>

    <div class="exhibitor-icon" style="background: url('<%= exhibitor.icon.blank? ? image_path('placeholder.jpg') : cl_image_path(exhibitor.icon) %>')">
    </div>

    <div class="exhibitor-item">

      <div class="exhibitor-info">
        <h2><%= exhibitor.name %></h2>
        <p><%= exhibitor.location %></p>
      </div>

    </div>

  <% end %>
  <div class="favorite-cont">
    <%= render 'components/visited', favorite: current_user.favorites.find_by(exhibitor_id: exhibitor.id), exhibitor: exhibitor %>
  </div>
</div>
