<% if current_user %>
  <% if @current_favorites.empty? %>
    <%= render 'components/favorites_empty_signed_in' %>
  <% else %>
    <div id="progress-wrapper">
      <%= render 'components/visited_progress', favorites: @current_favorites.count, visited: @visited_favorites.count %>
    </div>
    <% @current_favorites.each do |favorited_exhibitor| %>
      <%= render 'components/exhibitor_favorite_list', exhibitor: favorited_exhibitor %>
    <% end %>
  <% end %>
<% else %>
  <%= render 'components/favorites_not_signed_in' %>
<% end %>
