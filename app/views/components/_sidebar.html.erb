
    <!-- Sidebar -->
    <nav id="sidebar">

      <% if current_user %>
        <div class="relative-container">
      <% else %>
        <div class="relative-container foot-prints-login">
      <% end %>
          <div id="dismiss">
            <i class="fas fa-bars shadowless" id="blue-burger"></i>
          </div>

          <div class="sidebar-content">
            <% if current_user %>
              <div class="sidebar-header">
                <%= cl_image_tag(current_user.avatar, width: 100, height: 100, radius: "max", crop: :thumb, gravity: :face) %>
                <div class="user-name">
                  <h2 class="inline-block-element-heading"><%= current_user.first_name %> <%= current_user.last_name %></h2>
                  <%= link_to edit_user_registration_path, id:"pen-color" do %>
                    <i class="fas fa-pencil-alt"></i>
                  <% end %>
                </div>
              </div>
              <div class="sidebar-container">
                <%= render 'components/sidebar_list' %>
              </div>
            <% else %>
          </div>
              <div class="sidebar-center-text">
                <h2>Start organizing your notes by logging in below!</h2>
              </div>
            <% end %>

          <% if current_user %>
            <div id="log-out-div">
              <%= link_to(destroy_user_session_path, method: 'delete', class: "sidebar-icon-blue") do %>
                <h3>LOG OUT <i class="fas fa-sign-out-alt shadowless"></i></h3>
              <% end %>
            </div>
          <% else %>
            <div id="log-in-div">
              <%= link_to(new_user_session_path, class: "sidebar-icon-blue") do %>
                <h3>LOG IN <i class="fas fa-sign-in-alt shadowless"></i></h3>
              <% end %>
            </div>
          <% end %>
        </div>
    </nav>

    <!-- Page Content -->
    <div class="overlay"></div>
                <div id="sidebarCollapse">
                    <i class="fas fa-bars"></i>
                </div>
    <!-- Dark Overlay element -->
