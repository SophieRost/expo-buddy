<div class= 'exhibitor-list-item'>

  <%= link_to expo_exhibitor_path(exhibitor.expo, exhibitor) do %>

  <div class="exhibitor-icon" style="background: url('<%= exhibitor.icon.blank? ? cl_image_path('expo-buddy/placeholders/exhibitor-placeholder.jpg') : cl_image_path(exhibitor.icon) %>')">
  </div>

  <div class="exhibitor-item">
    <div class="exhibitor-info">
      <h2 class="bold-header"><%= exhibitor.name.length > 25 ? exhibitor.name.first(25) + '...' : exhibitor.name %></h2>
      <p class="light-paragraph"><%= exhibitor.location %></p>
    </div>
  </div>

  <% end %>

  <div class="favorite-cont">
    <%= render 'components/favorite', expo: @expo, exhibitor: exhibitor, fill_color: '#160C28' %>
  </div>

</div>
