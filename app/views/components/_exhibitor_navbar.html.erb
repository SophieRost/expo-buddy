<div class="navbar">
  <div class="navbar-icons">
    <%= link_to expo_exhibitors_path(@expo), class:"white-icons" do %>
      <i class="fas fa-arrow-left"></i>
    <% end %>
  </div>
  <div id="empty-div"></div>
  <div class="navbar-icons">
    <div class="favorite-cont">
      <div class="white-icons">
      <%# link_to send_data_exhibitor_path(@exhibitor), class:"white-icons" do %>
        <i class="fas fa-share-alt white-icons" data-toggle="modal" data-target="#exampleModal"></i>
        <%# end %>
        </div>
    </div>
    <div class="favorite-cont white-icons">
    <%= render 'components/favorite', expo: @expo, exhibitor: @exhibitor, fill_color: 'white' %>
    </div>
    <div class="favorite-cont" id= '<%="#{@exhibitor.id}a"%>'>
    <%= render 'components/visited_exhibitor_show', favorite: current_user.favorites.find_by(exhibitor_id: @exhibitor.id), exhibitor: @exhibitor if current_user != nil %>
  </div>
  </div>

</div>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
       Please confirm the export of all notes collected for acer. A PDF will be send to your accountâ€™s email address: <%= current_user.email %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-blank cancel-button" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-blank confirm-button" data-dismiss="modal">Confirm</button>
      </div>
    </div>
  </div>
</div>

<style>
  .modal-footer {
    display: flex;
    justify-content: flex-end;
  }

  .cancel-button {
    width: 100px;
    background-color: white;
    border-color: #C9C9C9;
    color: #C9C9C9;
  }
  .confirm-button {
    width: 100px;
    background-color: white;
    border-color: #160C28;
  }
  .cancel-button:hover {
    background-color: #C9C9C9;

  }
  .confirm-button:hover{
    background-color: #160C28;
  }
</style>
