<%= link_to bookmark_path(expo), {id: expo.id}, remote: true do %>
  <% if current_user %>
    <% bookmark = current_user.bookmarks.find_by(expo_id: expo.id) %>
    <% if bookmark%>
      <i class="fas fa-bookmark bm-card-size"></i>
      <%#= cl_image_tag("expo-buddy/buttons/Bookmark_full", {class: "bm-card-size"}) %>
    <% else %>
      <i class="far fa-bookmark bm-card-size"></i>
      <%#= cl_image_tag("expo-buddy/buttons/Bookmark_empty", {class: "bm-card-size"}) %>
    <% end %>
  <% else %>
    <i class="far fa-bookmark bm-card-size"></i>
    <%#= cl_image_tag("expo-buddy/buttons/Bookmark_empty", {class: "bm-card-size"}) %>
  <% end %>
<% end %>
